<!DOCTYPE html>
<html lang="en">
  <head>
    <title>New Map</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- Leaflet stuff for maps below -->
    <%- include('partials/_leafletApiLinks') %>
    <!-- Leaflet stuff for maps above -->
  </head>

  <body>
    <%- include('partials/_header') %>
    <section class="body-container">
      <form action="/maps/new" method="POST">
        <section class="section-title">
          <input type="text" placeholder="Map Name" name="map_name" />

          <input
            type="text"
            placeholder="Map Description"
            name="map_description"
          />

          <button type="submit" class="btn btn-outline-dark" id="smbtn">
            Create New Map
          </button>
        </section>

        <% for (const el of parksArray) { %>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            name="<%= el['id'] %>"
          />
          <label class="form-check-label" for="flexCheckDefault">
            <%= el['park_name'] %>
          </label>
        </div>
        <% } %>
      </form>
    </section>
  </body>

  <!-- Leaflet stuff for maps above -->
</html>
